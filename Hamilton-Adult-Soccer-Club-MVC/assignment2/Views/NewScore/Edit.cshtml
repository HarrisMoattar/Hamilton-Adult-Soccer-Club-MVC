@model assignment2.Models.Games

@{
    ViewData["Title"] = "Enter A New Score";
}

<h1>Enter A New Score</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameId" />
            <div class="form-group">
                <label asp-for="GameDate" class="control-label"></label>
                <input asp-for="GameDate" class="form-control" readonly />
                <span asp-validation-for="GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Field" class="control-label"></label>
                <input asp-for="Field" class="form-control" readonly />
                <span asp-validation-for="Field" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select hidden asp-for="HomeTeamId" class="form-control" asp-items="ViewBag.HomeTeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamScore" class="control-label">Home Team Score</label>
                <input asp-for="HomeTeamScore" class="form-control" autofocus />
                <span asp-validation-for="HomeTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select hidden asp-for="AwayTeamId" class="form-control" asp-items="ViewBag.AwayTeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamScore" class="control-label">Away Team Score</label>
                <input asp-for="AwayTeamScore" class="form-control" />
                <span asp-validation-for="AwayTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select hidden asp-for="RefereeId" class="form-control" asp-items="ViewBag.RefereeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameNotes" class="control-label"></label>
                <textarea asp-for="GameNotes" class="form-control" ></textarea >
                <span asp-validation-for="GameNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
